<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/appBackground"
    tools:context="com.example.robot.MainMenu" >

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/connectToPcButton"
        android:layout_below="@+id/connectToPcButton"
        android:layout_marginTop="55dp"
        android:background="@drawable/buttonshape"
        android:onClick="connectToPC"
        android:shadowColor="#A6A88A"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="25"
        android:text="About"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/connectToPcButton"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/connectToRobotButton"
        android:layout_below="@+id/connectToRobotButton"
        android:layout_marginTop="55dp"
        android:background="@drawable/buttonshape"
        android:onClick="connectToPC"
        android:shadowColor="#A6A88A"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="25"
        android:text="Connect to PC"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/exitAppButton"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/aboutButton"
        android:layout_below="@+id/aboutButton"
        android:layout_marginTop="55dp"
        android:background="@drawable/buttonshape"
        android:onClick="exitApp"
        android:shadowColor="#A6A88A"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="25"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/connectToRobotButton"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/buttonshape"
        android:onClick="connectToRobot"
        android:shadowColor="#A6A88A"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="25"
        android:text="Start"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</RelativeLayout>
